@model InventoryWebMvc.Models.ViewModels.OutputFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h4>Input</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Output.Quantity" class="control-label"></label>
                <input asp-for="Output.Quantity" class="form-control" />
                <span asp-validation-for="Output.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Output.Moment" class="control-label"></label>
                <input asp-for="Output.Moment" class="form-control" />
                <span asp-validation-for="Output.Moment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Output.Place" class="control-label"></label>
                <input asp-for="Output.Place" class="form-control" />
                <span asp-validation-for="Output.Place" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Output.ProductId" class="control-label"></label>
                <select asp-for="Output.ProductId" asp-items="@(new SelectList(Model.Products,"Id","Name"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark float-right ml-3" />
                <a asp-action="Index" class="btn btn-dark float-right">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
 @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
