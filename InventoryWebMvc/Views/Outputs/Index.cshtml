@model IEnumerable<InventoryWebMvc.Models.Output>

@{
    ViewData["Title"] = "Outputs";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Create New</a>
    <a asp-action="Search" class="btn btn-dark">Outputs Records</a>
</p>

<table class="table table-striped table-hover">

    <thead>
        <tr class="table-success">
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Moment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(AbandonedMutexException=> item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(AbandonedMutexException=> item.Moment)
                </td>
                <td>
                    @Html.DisplayFor(AbandonedMutexException=> item.Place)
                </td>
                <td>
                    @Html.DisplayFor(AbandonedMutexException=> item.Product.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>  

