@model InventoryWebMvc.Models.ViewModels.InputFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<h4>Input</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Input.Id" />
            <div class="form-group">
                <label asp-for="Input.Quantity" class="control-label"></label>
                <input asp-for="Input.Quantity" class="form-control" />
                <span asp-validation-for="Input.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Moment" class="control-label"></label>
                <input asp-for="Input.Moment" class="form-control" />
                <span asp-validation-for="Input.Moment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Place" class="control-label"></label>
                <input asp-for="Input.Place" class="form-control" />
                <span asp-validation-for="Input.Place" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Product" class="control-label"></label>
                <select asp-for="Input.ProductId" asp-items="@(new SelectList(Model.Products,"Id","Name"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-dark float-right ml-3" />
                <a asp-action="Index" class="btn btn-dark float-right">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
 @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}


